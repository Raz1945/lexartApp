{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "src",

    // Alias para rutas de importaci√≥n relativas a 'src'
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@middlewares/*": ["middlewares/*"],
      "@models/*": ["models/*"],
      "@db/*": ["db/*"],
      "@routes/*": ["routes/*"]
    }
  },
  "include": ["src"]
}
